<% if @movies %>
<div id="movieCarousel" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @movies.each_slice(4).with_index do |movie_slice, index| %>
      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
        <div class="album py-2"> <!-- Reduce padding for smaller screens -->
          <div class="container">
            <div class="row">
              <% movie_slice.each do |m| %>
                <div class="col-md-6 col-lg-3 col-sm-6"> <!-- Adjust column sizes for smaller screens -->
                  <div class="card mb-2 mb-md-4 box-shadow" style="border: none; border-radius:20px"> <!-- Reduce margin for smaller screens -->
                    <%= link_to movie_path(m), style: "text-decoration: none" do %>
                      <%= image_tag(m.image, class: "card-img-top rounded", style: "width: 100%; display: block;") %>
                      <div class="card-body">
                        <h5 class="card-text"><%= m.name %></h5>
                        <h6 class="card-text"><%= m.description %></h6>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#movieCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#movieCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<% else %>
  <p>No movies found.</p>
<% end %>

<%#= render 'footer' %>
